{% extends 'base.html.twig' %}
{%  block body %}

<article class = "authentication-form">
    <form action = "{{ path('login') }}" method = "post" >
        <label for = "username">Username:</label>
        <input type = "text" id = "username" name = "_username" value = "{{ last_username }}" autofocus/>

        <label for = "password">Password:</label>
        <input type = "password" id = "password" name = "_password"/>

        {# redirect after success #}
        {# <input type = "hidden" name = "_target_path" value = "/admin"/>#}

        {# crsf protection token #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <button class = "submit" type = "submit">login</button>
        <a class = "btn cancel" href = "{{ path('blog') }}">cancel</a>

    </form>
</article>

{%  endblock %}
{% block footer %}
{% endblock %}