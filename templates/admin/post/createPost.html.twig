{% extends 'admin/admin.html.twig' %}
{% block content %}
    <h1>
        {% block title %}
            create Post
        {% endblock %}
    </h1>

    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.author) }}
        {{ form_row(form.category) }}
        <label>Tags</label>
{#        {{ form_row(form.newTag) }}#}
        <ul class="tags" data-prototype="{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}">
            {% for tag in form.tags %}
                <li>
                    {{ form_errors(tag.name) }}
                    {{ form_widget(tag.name) }}
                </li>
            {% endfor %}
{#            {{ form_row(form.tags) }}#}
        </ul>
        {{ form_row(form.tags) }}
        {{ form_row(form.publicationDate) }}
        {{ form_row(form.public) }}
        {{ form_widget(form.save, {'attr': {'class': 'btn'}}) }}
        <a class = "btn cancel" href="{{ path('post') }}">back</a>
    {{ form_end(form) }}
{% endblock %}
